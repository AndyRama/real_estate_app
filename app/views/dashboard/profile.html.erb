<div class="property-main-photo" style="background-image:url('<%= cover_image_url @user %>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col">
          <p class="h4 mb-0"> <%= @user.full_name %> </p>
          <p class="mb-2"> <%= @user.company %> </p>
          <p>Registered for <%= time_ago_in_words @user.created_at %></p>
        </div>
      </div>
      
      <div class="row border-top border-bottom mt-5 mb-4 pt-4 pb-4">
        <div class="col-6">
          <h4>Agency description </h4>
        </div>  
        <div class="col-6 text-right">
          <strong><%= link_to "Need help to manage your property?" , "#", class: "text-success" %> </strong>
        </div>
      </div>

      <div class="row">
        <div class="col"> 
          <p class="h5">Description</p>
         
          <div id="prop-details" class="">
            <%= simple_format @user.details %>
          </div>  
          <button class="btn btn-outline-info mt-3 mb-3" id="toggleDetails">Show more</button>  
        </div>
      </div>  
    </div>
    <div class="col-md-4">
      <%= render "properties/agent_details", agent: @user %>

        <div class="col-md-10 offset-md-1 text-center">
          <div class="row mt-sm-3 bg-light p-3 ">
            <div class="col-6">
              <p class="lead"><%= @properties_sold %><br />Sold</p>
            </div>
            <div class="col-6">
              <p class="lead"><%= @properties_for_sale %><br />For Sale</p>
            </div>
            <div class="col-6">
              <p class="lead"><%= @properties_leased %><br />Leased</p>
            </div> 
            <div class="col-6">
              <p class="lead"><%= @properties_for_rent %><br />For Rent</p>
          </div>
        </div>
    </div>
  </div>
</div>
<section class=" mt-5 mb-5 ">
  <div class="container">
    <div class="row">
      <%= render "properties/list", properties: @properties%>
    </div>
  </div>
</section>
<%=  render "properties/send_email_modal", agent: @user %>