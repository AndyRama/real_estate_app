<h1>Users</h1>

<table class= "table table-striped">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>email</th>
      <th>date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime("%d %m %Y") %></td>
        <td><%= link_to "View profil", profile_path(user.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>


