<div class="text-center border p-4 pb-4 ml-lg-4 mb-3">
  <div class="mb-2">
    <%= profile_picture @user %>
  </div>
 
  <h3 class="h4 m-0"><%= @user.full_name %></h3>
  <p><%= @user.company %></p>

  <div class="row">
    <div class="col-12">
      <button class="btn btn-block btn-info text-uppercase mb-3", id="show-tel" data-number="<%= @user.number %>"><i class="fas fa-phone mr-2"></i> <span>Call</span></button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <%= link_to "Profile", profile_path(@user.id), class: "btn btn-secondary btn-block text-uppercase"%>
    </div>
    <div class="col-md-6">
      <button class="btn btn-block btn-success text-uppercase", data-toggle="modal" data-target="#contact-modal" >Email </button>
    </div>
  </div>
</div>